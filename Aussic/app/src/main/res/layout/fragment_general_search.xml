<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.searchPages.GeneralSearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_general_songs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:textSize="40dp"
                android:text="Songs..."
                android:fontFamily="casual"/>
            <!-- Placeholder for Song List (RecyclerView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_list_song_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/trans"/>

            <TextView
                android:id="@+id/search_general_genres"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:textSize="40dp"
                android:text="Genres..."
                android:fontFamily="casual"/>
            <!-- Placeholder for Genre List (RecyclerView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_list_genre_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <TextView
                android:id="@+id/search_general_artists"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:textSize="40dp"
                android:text="Artists..."
                android:fontFamily="casual"/>
            <!-- Placeholder for Artist List (RecyclerView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_list_artist_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/trans"/>


        </LinearLayout>
    </ScrollView>

</FrameLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbkg"
    android:padding="10dp"
    android:gravity="center"
    android:divider="@android:color/darker_gray"
    android:showDividers="middle"
    android:dividerPadding="10dp">

    <!-- First Horizontal LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/p1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/p1"
            android:layout_marginEnd="30dp"/>

        <ImageView
            android:id="@+id/p2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/p2"/>

    </LinearLayout>

    <!-- Second Horizontal LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/p3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/p3"
            android:layout_marginEnd="30dp"/>

        <ImageView
            android:id="@+id/p4"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/p4"/>

    </LinearLayout>

    <!-- Third Horizontal LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/p5"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/p5"
            android:layout_marginEnd="30dp"/>

        <ImageView
            android:id="@+id/p6"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/p6"/>

    </LinearLayout>

    <!-- Fourth Horizontal LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/p7"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/p7"
            android:layout_marginEnd="30dp"/>

        <ImageView
            android:id="@+id/p8"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/p8"/>

    </LinearLayout>

</LinearLayout>

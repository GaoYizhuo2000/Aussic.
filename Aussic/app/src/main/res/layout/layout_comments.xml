<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Title "Comments..." -->
    <TextView
        android:id="@+id/song_comments_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Comments..."
        android:background="@drawable/ic_comments_bg"
        android:fontFamily="casual"
        android:textColor="@color/white"
        android:padding="18dp"
        android:textStyle="bold"
        android:textSize="30dp" />

    <RelativeLayout
        android:id="@+id/comment_input_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_comments_title"
        android:layout_marginTop="16dp">

        <!-- EditText for typing in comments -->
        <EditText
            android:id="@+id/song_comment_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="casual"
            android:textSize="18dp"
            android:hint="Type your comment here..."
            android:background="@drawable/comments_dashed_border"
            android:padding="18dp"
            android:paddingEnd="60dp"
            android:paddingRight="60dp"/>

        <!-- Send Button -->
        <Button
            android:id="@+id/the_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/song_comment_input"
            android:layout_alignRight="@+id/song_comment_input"
            android:layout_centerVertical="true"
            android:text="Send"
            android:textColor="@color/orange_comments"
            android:background="@android:color/transparent"
            android:fontFamily="casual"
            android:stateListAnimator="@animator/image_click_animator"
            android:textSize="18dp"
            android:paddingTop="18dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    </RelativeLayout>

    <!-- RecyclerView for displaying comments -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/song_comments_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_input_wrapper"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="18dp"/>

</RelativeLayout>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.entityPages.SongActivity">

    <Button
        android:id="@+id/goBacktoHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/baseline_arrow_circle_left_24"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintDimensionRatio="1:1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal">


                <ImageView
                    android:id="@+id/song_spinning_round_image"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="center"
                    android:background="@drawable/round_image_bg"
                    android:stateListAnimator="@animator/image_click_animator"
                    />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_song_play"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/song_spinning_round_image"
                    android:id="@+id/song_fab"
                    android:stateListAnimator="@animator/image_click_animator"
                    app:tint="@color/trans_light_sea_green" />


            </RelativeLayout>

            <TextView
                android:id="@+id/song_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/song_fab"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:text="Loading..."
                android:fontFamily="casual"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/song_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/song_song_name"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:text="Loading..."
                android:stateListAnimator="@animator/image_click_animator"
                android:fontFamily="casual"
                android:textColor="@color/white"
                android:background="@drawable/name_bg"
                android:textSize="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="30dp">

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="30dp">

                    <ImageView
                        android:id="@+id/song_like"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stateListAnimator="@animator/image_click_animator"
                        android:src="@drawable/ic_song_not_like" />

                    <TextView
                        android:id="@+id/like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:text=""
                        android:fontFamily="casual"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        android:background="@color/trans" /> <!-- Semi-transparent background -->
                </FrameLayout>

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="30dp">

                    <ImageView
                        android:id="@+id/song_fav"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stateListAnimator="@animator/image_click_animator"
                        android:src="@drawable/ic_song_not_fav" />

                    <TextView
                        android:id="@+id/fav_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:text=""
                        android:fontFamily="casual"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        android:background="@color/trans" /> <!-- Semi-transparent background -->
                </FrameLayout>


                <ImageView
                    android:id="@+id/song_comment"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:stateListAnimator="@animator/image_click_animator"
                    android:src="@drawable/ic_song_comment" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/trans"/>



        </LinearLayout>



</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".controller.loginPages.LoadingActivity"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/loading_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/loading_aussic_bird"
        android:layout_marginTop="50dp"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="75dp"
        android:layout_height="200dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/lighter_sky_blue"
        app:layout_constraintTop_toBottomOf="@id/loading_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.searchPages.GeneralSearchFragment"
    tools:ignore="MissingDefaultResource">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_general_songs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="casual"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:text="Songs..."
                android:textSize="40dp" />

            <!-- Placeholder for Song List (RecyclerView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_list_song_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/trans" />

            <TextView
                android:id="@+id/search_general_genres"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="casual"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:text="Genres..."
                android:textSize="40dp" />

            <!-- Placeholder for Genre List (RecyclerView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_list_genre_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <TextView
                android:id="@+id/search_general_artists"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="casual"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:text="Artists..."
                android:textSize="40dp" />

            <!-- Placeholder for Artist List (RecyclerView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_list_artist_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/search_general_users"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="casual"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:text="Users..."
                android:textSize="40dp" />

            <!-- Placeholder for Artist List (RecyclerView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_list_user_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/trans" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>